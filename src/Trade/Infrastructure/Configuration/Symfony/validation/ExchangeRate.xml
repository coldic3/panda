<?xml version="1.0" encoding="UTF-8"?>

<constraint-mapping
    xmlns="http://symfony.com/schema/dic/constraint-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd"
>
    <class name="Panda\Trade\Domain\Model\ExchangeRate\ExchangeRate">
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">
                <value>baseAsset</value>
                <value>quoteAsset</value>
            </option>
            <option name="groups">
                <value>panda:create</value>
            </option>
        </constraint>
        <property name="baseAsset">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>panda:create</value>
                </option>
            </constraint>
        </property>
        <property name="quoteAsset">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>panda:create</value>
                </option>
            </constraint>
        </property>
        <property name="rate">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>panda:create</value>
                    <value>panda:update</value>
                </option>
            </constraint>
            <constraint name="PositiveOrZero">
                <option name="groups">
                    <value>panda:create</value>
                    <value>panda:update</value>
                </option>
            </constraint>
        </property>
    </class>
</constraint-mapping>
