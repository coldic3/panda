<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="Panda\Transaction\Domain\Model\Transaction" table="panda_transaction">
        <id name="id" column="id" type="uuid" />

        <field name="type" column="type" enum-type="Panda\Transaction\Domain\ValueObject\TransactionTypeEnum" length="255" />
        <field name="concludedAt" column="concluded_at" type="datetime" />

        <one-to-one field="fromOperation" target-entity="Panda\Transaction\Domain\Model\Operation" fetch="EAGER">
            <join-column name="from_operation_id" />

            <cascade><cascade-persist /></cascade>
        </one-to-one>

        <one-to-one field="toOperation" target-entity="Panda\Transaction\Domain\Model\Operation" fetch="EAGER">
            <join-column name="to_operation_id" />

            <cascade><cascade-persist /></cascade>
        </one-to-one>

        <many-to-many field="adjustmentOperations" target-entity="Panda\Transaction\Domain\Model\Operation" fetch="EAGER">
            <join-table name="panda_transaction_adjustment_operation">
                <join-columns>
                    <join-column name="transaction_id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="operation_id" />
                </inverse-join-columns>
            </join-table>

            <cascade><cascade-persist /></cascade>
        </many-to-many>

        <many-to-one field="owner" target-entity="Panda\Contract\AggregateRoot\Owner\OwnerInterface">
            <join-column name="owner_id" nullable="false" />
        </many-to-one>
    </entity>
</doctrine-mapping>
