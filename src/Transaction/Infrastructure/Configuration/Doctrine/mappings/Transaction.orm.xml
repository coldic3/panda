<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="Panda\Transaction\Domain\Model\Transaction" table="panda_transaction">
        <id name="id" column="id" type="uuid" />

        <field name="type" column="type" enum-type="Panda\Transaction\Domain\ValueObject\TransactionTypeEnum" length="255" />
        <field name="fromOperation" column="from_operation" type="json_document" />
        <field name="toOperation" column="to_operation" type="json_document" />
        <field name="adjustmentOperations" column="adjustment_operations" type="json_document" />
        <field name="concludedAt" column="concluded_at" type="datetime" />

        <many-to-one field="owner" target-entity="Panda\Contract\AggregateRoot\Owner\OwnerInterface">
            <join-column name="owner_id" nullable="false" />
        </many-to-one>
    </entity>
</doctrine-mapping>
