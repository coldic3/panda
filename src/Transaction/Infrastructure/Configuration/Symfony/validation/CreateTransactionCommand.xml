<?xml version="1.0" encoding="UTF-8"?>

<constraint-mapping
    xmlns="http://symfony.com/schema/dic/constraint-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd"
>
    <class name="Panda\Transaction\Application\Command\Transaction\CreateTransactionCommand">
        <constraint name="Panda\Transaction\Application\Validator\Command\TransactionOperationsDiffer">
            <option name="groups">
                <value>panda</value>
            </option>
        </constraint>
        <constraint name="Panda\Transaction\Application\Validator\Command\TransactionOperationAdjustmentsMatch">
            <option name="groups">
                <value>panda</value>
            </option>
        </constraint>
    </class>
</constraint-mapping>
